import java.util.Scanner;

public class PermutationPrinter {
    public static void printPermutations(String str) {
        printPermutationsHelper("", str);
    }

    public static void printPermutationsHelper(String prefix, String suffix) {
        int n = suffix.length();
        if (n == 0) {
            System.out.println(prefix); // base case: print the permutation
        } else {
            for (int i = 0; i < n; i++) {
                printPermutationsHelper(prefix + suffix.charAt(i), suffix.substring(0, i) + suffix.substring(i + 1));
            }
        }
    }

    public static void main(String[] args) {
        // Get input from user
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a string: ");
        String str = scanner.nextLine();

        // Call the printPermutations method
        System.out.println("All permutations of the string:");
        printPermutations(str);
    }
}
