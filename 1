import java.util.Scanner;

public class Main {
    public static int findMinimum(int[] arr) {
        if (arr == null || arr.length == 0) {
            throw new IllegalArgumentException("Input array is null or empty.");
        }

        int min = arr[0]; // Initialize min with the first element of the array

        // Iterate through the array and compare each element with min
        for (int num : arr) {
            if (num < min) {
                min = num; // Update min if a smaller element is found
            }
        }

        return min; // Return the minimum value
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the number of elements: ");
        int n = scanner.nextInt();

        int[] arr = new int[n];
        System.out.print("Enter " + n + " numbers separated by space: ");
        for (int i = 0; i < n; i++) {
            arr[i] = scanner.nextInt();
        }

        scanner.close();

        int min = findMinimum(arr);
        System.out.println("Minimum value: " + min);
    }
}
